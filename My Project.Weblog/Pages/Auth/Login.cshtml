@page
@model My_Project.Weblog.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<form method="post">
    <h1>ورود به سایت</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName" />
        <span asp-validation-for="UserName" style="color: red"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password"/>
        <span asp-validation-for="Password" style="color: red"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Register">ثبت نام</a>
    </div>
</form>